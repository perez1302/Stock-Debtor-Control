@model IEnumerable<Demo.Models.StockMaster>

@{
    ViewBag.Title = "Index";
}

<h2>Stock Management</h2>








<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dashboard", "Index", "StockMasters", new { area = "" }, new { @class = "navbar-brand" })|
                @Html.ActionLink("Add New Stock Line", "Create", "StockMasters", new { area = "" }, new { @class = "navbar-brand" })|
                @Html.ActionLink("Purchase Stock", "Create", "StockTransactionFiles", new { area = "" }, new { @class = "navbar-brand" })|
                @Html.ActionLink("View Stock Purchases", "List", "StockTransactionFiles", new { area = "" }, new { @class = "navbar-brand" })|
                @Html.ActionLink("View Debtors", "EmployeeAccess", "DebtorMasters", new { area = "" }, new { @class = "navbar-brand" })|
                @Html.ActionLink("Add New Debtor", "Create", "DebtorMasters", new { area = "" }, new { @class = "navbar-brand" })|
                @Html.ActionLink("Create New Login", "Register", "Home", new { area = "" }, new { @class = "navbar-brand" })|
                @Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>
</body>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StockDes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MarkUp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SellingPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QtyPurchased)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPurchase)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QtySold)
        </th>
        <th>
            @Html.ActionLink("TotalSales", "Index", new { Sorting_Order = ViewBag.TotalSalesSort })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockAvailable)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StockDes)
        </td>
        <td>
            R @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MarkUp)%
        </td>
        <td>
            R @Html.DisplayFor(modelItem => item.SellingPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QtyPurchased)
        </td>
        <td>
            R @Html.DisplayFor(modelItem => item.TotalPurchase)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QtySold)
        </td>
        <td>
            R @Html.DisplayFor(modelItem => item.TotalSales)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StockAvailable)
        </td>
        <td>

            @Html.ActionLink("Delete", "Delete", new { id = item.StockCode })
        </td>
        <td>

            @Html.ActionLink("Invoice Detail", "Details", new { id = item.StockCode })
        </td>
    </tr>
    }

</table>
